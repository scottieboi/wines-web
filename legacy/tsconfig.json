{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "jsx": "react",
    "moduleResolution": "Node",
    "module": "ESNext",
    "types": ["vite/client"],
    "paths": {
      "~*": [
        "./*"
      ]
    },
    "strict": true,
    "target": "ES2015",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}